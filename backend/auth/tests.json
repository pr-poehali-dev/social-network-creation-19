{
  "tests": [
    {
      "name": "Register duplicate user (already exists)",
      "method": "POST",
      "path": "/",
      "body": {"action": "register", "name": "Тест Юзер", "email": "test_eclipse_unique@example.com", "password": "secret123"},
      "expectedStatus": 400,
      "expectedBody": {"error": "Email уже занят"},
      "bodyMatcher": "partial"
    },
    {
      "name": "Login existing user",
      "method": "POST",
      "path": "/",
      "body": {"action": "login", "email": "test_eclipse_unique@example.com", "password": "secret123"},
      "expectedStatus": 200,
      "expectedBody": {"user": {}},
      "bodyMatcher": "partial"
    },
    {
      "name": "Login wrong password",
      "method": "POST",
      "path": "/",
      "body": {"action": "login", "email": "test_eclipse_unique@example.com", "password": "wrongpass"},
      "expectedStatus": 401,
      "expectedBody": {"error": "Неверный email или пароль"},
      "bodyMatcher": "partial"
    }
  ]
}